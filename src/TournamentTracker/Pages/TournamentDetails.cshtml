@page "{id:guid}"

@model TournamentTracker.Pages.TournamentDetailsModel

@{
    ViewData["Title"] = "Tournament details";
}

<div class="mt-5" x-data="tournaments">
    <div class="mt-5 card text-center mx-auto" x-cloak x-data="tournament" x-init="get(id)" style="width:1000px">
        <div class="card-body">
            <h6 class="card-text" x-text="name"></h6>
            <h3 class="card-title" x-text="entryFee"></h3>
            <h4 class="card-text" x-text="startDate"></h4>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        document.addEventListener("alpine:init", () => {
            tournaments('@Thread.CurrentThread.CurrentCulture.TwoLetterISOLanguageName');
        });
    </script>
}